  "version": "0.2.0",
  "configurations": [
      {
          "name": "cute_layout",
          "type": "cppdbg",
          "request": "launch",
          "program": "${workspaceFolder}/src/cutlass_examples/layout/main",
          "cwd": "${workspaceFolder}/src/cutlass_examples/layout",
          "args": [],
          "stopAtEntry": true,
          "environment": [
              {
                  "name": "TF_CPP_MAX_VLOG_LEVEL",
