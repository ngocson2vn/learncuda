{
    "configurations": [
        {
            "name": "Linux",
            "includePath": [
                "/usr/local/cuda/include/**",
                "${workspaceFolder}/**"
            ],
            "defines": [
                "GOOGLE_CUDA"
            ],
            "compilerPath": "/usr/bin/gcc",
            "cStandard": "c11",
            "cppStandard": "c++17",
            "intelliSenseMode": "${default}",
            "browse": {
                "databaseFilename": "${workspaceFolder}/.vscode/vc.db",
                "limitSymbolsToIncludedHeaders": false
            }
        }
    ],
    "version": 4
}